<Window x:Class="minecraft_bot.CaptureBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:minecraft_bot"
        mc:Ignorable="d"
        Title="CaptureBox"
        WindowState="Maximized"
        AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Opacity="0"/>
    </Window.Background>
    <Grid MouseUp="mouse_up" MouseDown="mouse_press" Background="Green" Opacity="0.2">
        <TextBlock Name="xD" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Choose a part of the screen" VerticalAlignment="Top" FontSize="36" Foreground="Yellow" Opacity="3"/>
        <Canvas Name="canvas_livecheck">
            <Rectangle Name="canvas_rectangle" Fill="Red"/>
        </Canvas>
    </Grid>
</Window>
